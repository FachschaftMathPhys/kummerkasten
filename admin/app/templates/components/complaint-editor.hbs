{{#paper-card as |card|}}
  {{#card.title as |title|}}
    {{#title.text as |text|}}
      {{#text.headline}}{{complaint.course.name}}{{/text.headline}}
      {{#text.subhead}}{{moment-format complaint.createdAt "DD.MM.YYYY"}}{{/text.subhead}}
    {{/title.text}}
  {{/card.title}}
  {{#card.content}}
    {{simple-mde-preview complaint.message}}
  {{/card.content}}
  {{#card.actions}}
    {{#paper-button warn=true onClick=onDismiss}}Ablehnen{{/paper-button}}
    {{#paper-button accent=true onClick=onApprove}}Akzeptieren{{/paper-button}}
  {{/card.actions}}
{{/paper-card}}
