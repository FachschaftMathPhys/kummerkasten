{{#paper-card as |card|}}
    {{#card.title as |title|}}
      {{#title.text as |text|}}
        {{#text.headline}}
          Neues Semester anlegen:
        {{/text.headline}}
      {{/title.text}}
    {{/card.title}}
    {{#paper-form onSubmit=(action "saveSemester") as |form|}}
    {{#card.content}}
    {{form.input value=name label="Name" required=true onChange=(action (mut name))}}
    {{paper-pikaday format="MM.YYYY" placeholder="Semesterstartdatum" required=true value=date}}
    {{form.input value=lsfid type="number" required=true onChange=(action (mut lsfid))}}
    {{/card.content}}
    {{#card.actions}}
    {{#form.submit-button raised=true primary=true}}Speichern{{/form.submit-button}}
    {{/card.actions}}
    {{/paper-form}}
  {{/paper-card}}
{{#paper-card as |card|}}
{{#card.title as |title|}}
  {{#title.text as |text|}}
    {{#text.headline}}
      {{paper-icon "data usage"}} Semester
    {{/text.headline}}
  {{/title.text}}
{{/card.title}}
{{#card.content}}
{{#paper-data-table sortProp="year" sortDir="desc" selectable=true as |table|}}
          {{#table.head as |head|}}
            {{head.column}}
            {{#head.column}}Name{{/head.column}}
            {{#head.column}}Jahr{{/head.column}}
            {{#head.column}}LSF-ID{{/head.column}}
            {{#head.column}}Optionen{{/head.column}}
            {{/table.head}}
          {{#table.body as |body|}}
            {{#each (sort-by table.sortDesc model) as |sem|}}
              {{#body.row edit=true as |row|}}
              {{#row.cell}}{{paper-icon "data usage" }}{{/row.cell}}
                {{#row.cell}}{{sem.name}}{{/row.cell}}
                {{#row.cell}}{{moment-format sem.year "MM.YYYY"}}{{/row.cell}}
                {{#row.cell}}{{sem.lsfid}}{{/row.cell}}
                {{#row.cell edit=true as |cell|}}
                {{#paper-button iconButton=true onClick=(action "editSemester" sem)}}{{paper-icon "edit"}}{{/paper-button}}
                {{#paper-button iconButton=true onClick=(action "deleteSemester" sem)}}{{paper-icon "delete"}}{{/paper-button}}
                {{/row.cell}}
              {{/body.row}}
            {{/each}}
          {{/table.body}}
        {{/paper-data-table}}
{{/card.content}}
{{/paper-card}}
