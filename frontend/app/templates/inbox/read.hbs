  {{#each model as |complaint|}}
    {{#paper-card as |card|}}
    {{#card.title as |title|}}
        {{#title.text as |text|}}
          {{#text.headline}}{{complaint.course.name}}{{/text.headline}}
          {{#text.subhead}}{{moment-format complaint.createdAt locale='de'}}{{/text.subhead}}
        {{/title.text}}
      {{/card.title}}
      {{#card.content}}
      {{complaint.message}}
      {{/card.content}}
    {{/paper-card}}
    {{else}}
    {{#paper-card as |card|}}
      {{#card.content}}
      Sie haben keinen gelesenen Kummer.
      {{/card.content}}
    {{/paper-card}}
  {{/each}}
  {{outlet}}
